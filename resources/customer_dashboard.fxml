<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="ui.CustomerDashboardController"
            prefWidth="800" prefHeight="600">

    <top>
        <Label text="Customer Dashboard - Vehicle Rental System"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10;" />
    </top>

    <center>
        <SplitPane orientation="VERTICAL">
            <items>
                <!-- Available Cars Section -->
                <VBox spacing="10" padding="10">
                    <Label text="Available Cars" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    <TableView fx:id="availableCarsTable" prefHeight="180">
                        <columns>
                            <TableColumn fx:id="carIdColumn" text="Car ID" prefWidth="150"/>
                            <TableColumn fx:id="carModelColumn" text="Model" prefWidth="200"/>
                            <TableColumn fx:id="carAvailabilityColumn" text="Available" prefWidth="100"/>
                        </columns>
                    </TableView>
                    <Button fx:id="makeReservationButton" text="Make Reservation" onAction="#handleMakeReservation" prefWidth="160"/>
                </VBox>

                <!-- Reservations Section -->
                <VBox spacing="10" padding="10">
                    <Label text="My Reservations" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    <TableView fx:id="reservationTable" prefHeight="180">
                        <columns>
                            <TableColumn fx:id="reservationIdColumn" text="Reservation ID" prefWidth="150"/>
                            <TableColumn fx:id="reservationCarColumn" text="Car ID" prefWidth="150"/>
                            <TableColumn fx:id="reservationStatusColumn" text="Status" prefWidth="150"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Rentals Section -->
                <VBox spacing="10" padding="10">
                    <Label text="My Rentals" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    <TableView fx:id="rentalTable" prefHeight="180">
                        <columns>
                            <TableColumn fx:id="rentalIdColumn" text="Rental ID" prefWidth="150"/>
                            <TableColumn fx:id="rentalReservationColumn" text="Reservation ID" prefWidth="150"/>
                            <TableColumn fx:id="rentalReturnedColumn" text="Returned" prefWidth="100"/>
                        </columns>
                    </TableView>
                    <Button fx:id="returnRentalButton" text="Return Rental" onAction="#handleReturnRental" prefWidth="160"/>
                </VBox>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <Label fx:id="messageLabel" text="" style="-fx-text-fill: green; -fx-padding: 10;" />
    </bottom>
</BorderPane>